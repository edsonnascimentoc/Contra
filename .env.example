PORT=3001
NODE_ENV=production

# Database
DATABASE_URL="postgresql://user:password@host:5432/construction_db?schema=public"
DIRECT_URL="postgresql://user:password@host:5432/construction_db?schema=public"

# Security
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Redis Cache
REDIS_URL=redis://localhost:6379
